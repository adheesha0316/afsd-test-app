      <Button layoutX="270.0" layoutY="250.0" mnemonicParsing="false" onAction="#addition" prefHeight="50.0" prefWidth="58.0" style="-fx-background-color: blue;" text="+" textFill="WHITE">
         <font>
            <Font name="System Bold" size="23.0" />
         </font>
      </Button>
      <Button layoutX="271.0" layoutY="377.0" mnemonicParsing="false" onAction="#substract" prefHeight="50.0" prefWidth="58.0" style="-fx-background-color: blue;" text="-" textFill="WHITE">
         <font>
            <Font size="23.0" />
         </font>
      </Button>
      <Button layoutX="352.0" layoutY="314.0" mnemonicParsing="false" onAction="#multiply" prefHeight="50.0" prefWidth="58.0" style="-fx-background-color: blue;" text="x" textFill="WHITE">
         <font>
            <Font size="23.0" />
         </font>
      </Button>

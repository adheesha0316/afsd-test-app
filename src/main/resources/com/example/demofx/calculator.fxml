<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="441.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demofx.Calculator">
   <children>
      <Button layoutX="192.0" layoutY="314.0" mnemonicParsing="false" onAction="#divid" prefHeight="50.0" prefWidth="58.0" style="-fx-background-color: blue;" text="/" textFill="WHITE">
         <font>
            <Font size="23.0" />
         </font>
